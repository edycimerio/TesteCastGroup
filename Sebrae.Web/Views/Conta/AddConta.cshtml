@model Sebrae.Web.Models.ContaModel

@{
    ViewData["Title"] = "AddConta";
}



<h1>Adicionar Conta</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddConta" method="post">
            <div class="form-group">
                <label for="Id">Id:</label>
                <input class="form-control" name="Id" disabled="true" />
            </div>
            <div class="form-group">
                <label for="Name">Nome:</label>
                <input class="form-control" name="Nome" />
            </div>
            <div class="form-group">
                <label for="de">Descrição:</label>
                <input class="form-control" name="Descricao" />
            </div>
            <br />
            <div class="text-center panel-body">
                <button type="submit" class="btn btn-sm btn-primary">Salvar</button>&nbsp&nbsp <a asp-action="Index" class="btn btn-sm btn-success">Retorna</a>
            </div>
        </form>

        @if (Model != null)
        {
        <h2>Conta</h2>
        <table class="table table-sm table-striped table-bordered m-2">
            <thead><tr><th>ID</th><th>Nome</th><th>Descrição</th></tr></thead>
            <tbody>
                <tr>
                    <td>@Model.Id</td>
                    <td>@Model.Nome</td>
                    <td>@Model.Descricao</td>
                </tr>
            </tbody>
        </table>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

